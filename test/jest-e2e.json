{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".e2e-spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/myfamily/auth/(.*)$": "<rootDir>/../src/auth/$1",
    "^@/myfamily/common/(.*)$": "<rootDir>/../src/common/$1",
    "^@/myfamily/config/(.*)$": "<rootDir>/../src/config/$1",
    "^@/myfamily/models/(.*)$": "<rootDir>/../src/models/$1",
    "^@/myfamily/providers/(.*)$": "<rootDir>/../src/providers/$1"
  }
}
